follow_outside_symlinks "yes"
follow_inside_symlinks "yes"

bind_to_address "/home/robbie/.mpd/.socket"
music_directory "/home/robbie/Music"
db_file "/home/robbie/.mpd/database"
log_file "/home/robbie/.mpd/log"
state_file "/home/robbie/.mpd/state"
pid_file "/home/robbie/.mpd/mpd.pid"

#user "robbie"

audio_output {
    type "alsa"
    name "alsa device"
    mixer_device "default"
    mixer_control "PCM"
    mixer_index "0"
}
