# set to yes if you want Conky to be forked in the background
background no

cpu_avg_samples 2
net_avg_samples 2

out_to_x no
out_to_console yes

# Update interval in seconds
update_interval 1

# Subtract file system buffers from used memory?
no_buffers yes
text_buffer_size 512

# MPD host/port
mpd_host localhost
mpd_port 6600

TEXT
^fg(green)$mpd_artist - $mpd_title ^fg(gray)\
^fg(orange)${time %a %D, %R}
#^fg(#ffffff)$mpd_artist - $mpd_title ^fg(#444444)| ^fg(#ffffff)${cpu cpu1}% ^fg(#ffffff)${cpu cpu2}% ^fg(#444444)| ^fg(#ffffff)$mem ^fg(#444444)| ^fg(#ffffff)${downspeed eth0} ^fg(#ffffff)${upspeed eth0} ^fg(#444444)| ^fg(#444444)| ^fg(green)${time %m-%d-%y %l:%M%p}
